{
	"name": "@ededejr/randomly",
	"version": "0.2.0",
	"description": "A utility for generating random numbers very frequently.",
	"main": "index.js",
	"scripts": {
		"benchmark": "ts-node ./benchmark",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"package:benchmark": "npm run scripts:run benchmark",
		"package:build": "tsup --format cjs,esm --dts && npm run package:prepare",
		"package:prepare": "npm run scripts:run prepare-dist",
		"prettier": "prettier --write .",
		"prettier:check": "prettier --check .",
		"release": "release-it",
		"release:minor": "release-it --minor",
		"release:major": "release-it --major",
		"release:patch": "release-it --patch",
		"scripts:run": "ts-node ./scripts/index.ts",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ededejr/randomly.git"
	},
	"keywords": [
		"random",
		"numbers",
		"generator",
		"generative art",
		"decisions",
		"Math.random"
	],
	"author": "@ededejr",
	"license": "LICENSE",
	"bugs": {
		"url": "https://github.com/ededejr/randomly/issues"
	},
	"homepage": "https://github.com/ededejr/randomly#readme",
	"devDependencies": {
		"@ededejr/utils": "^0.5.1",
		"@release-it/conventional-changelog": "^5.1.1",
		"@types/jest": "^29.5.1",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"eslint": "^8.41.0",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"prettier": "^2.8.7",
		"release-it": "^15.10.1",
		"terser": "^5.17.1",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"tsup": "^6.7.0",
		"typescript": "^5.0.4"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"splitting": false,
		"sourcemap": true,
		"clean": true,
		"minify": "terser",
		"terserOptions": {
			"compress": true,
			"mangle": true
		}
	},
	"release-it": {
		"git": {
			"commit": true,
			"commitMessage": "chore(release): release v${version}",
			"changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
			"tagAnnotation": "Release v${version}"
		},
		"npm": {
			"publish": false,
			"publishPath": "./dist"
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": "angular",
				"infile": "CHANGELOG.md"
			}
		},
		"hooks": {
			"before:init": [
				"npm run package:build"
			],
			"after:bump": "npm run package:prepare",
			"after:release": "npm publish ./dist"
		},
		"github": {
			"release": true,
			"releaseName": "v${version}"
		}
	}
}
